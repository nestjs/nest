{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["dom"],
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "e2e/**/*"],
  "exclude": ["node_modules"]
}
