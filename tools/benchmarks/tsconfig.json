{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "outDir": "dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
}
