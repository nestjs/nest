{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/tools/gulp",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "target": "ES2021",
    "types": ["node"],
    "typeRoots": ["./typings", "../../node_modules/@types/"],
    "baseUrl": "."
  },
  "files": ["gulpfile.ts"]
}
